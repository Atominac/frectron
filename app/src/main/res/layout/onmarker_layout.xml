<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1"
    android:gravity="center_horizontal">

            <TextView
                android:id="@+id/onmarker_truck_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TR1011"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/onmarker_truck_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Location"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/onmarker_truck_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/onmarker_truck_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Status"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:gravity="center"/>


            <TextView
                android:id="@+id/onmarker_current_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="24 Km/h"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:gravity="center"/>

</LinearLayout>